{
  "name": "vschat",
  "displayName": "VS Chat",
  "description": "一个轻量级的 VS Code AI 聊天扩展",
  "version": "0.0.2",

  "author": {
    "name": "名字"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wwwedf1/vschat.git"
  },
  "license": "MIT",

  "keywords": [
    "chat",
    "ai",
    "llm",
    "copilot",
    "assistant"
  ],
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:chat"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "chat",
        "aliases": ["Chat", "chat"],
        "extensions": [".chat"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "chat",
        "scopeName": "text.chat",
        "path": "./syntaxes/chat.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "vschat.toggleCurrentBlockState",
        "title": "切换当前聊天块激活状态"
      },
      {
        "command": "vschat.pushState",
        "title": "保存当前状态"
      },
      {
        "command": "vschat.popState",
        "title": "恢复上一个状态"
      },
      {
        "command": "vschat.insertUserBlock",
        "title": "插入用户块"
      },
      {
        "command": "vschat.insertNoteBlock",
        "title": "插入注释块",
        "category": "VSChat"
      },
      {
        "command": "vschat.setNoteTitle",
        "title": "设置注释块标题",
        "category": "VSChat"
      },
      {
        "command": "vschat.renameBlock",
        "title": "设置块标题（用于大纲视图）",
        "category": "VSChat"
      },
      {
        "command": "vschat.selectModel",
        "title": "选择AI模型",
        "category": "VSChat"
      },
      {
        "command": "vschat.sendCurrentContextRequest",
        "title": "发送聊天请求",
        "category": "VSChat",
        "icon": "$(send)"
      },
      {
        "command": "vschat.verifyLLMProvider",
        "title": "验证 LLM Provider",
        "category": "VSChat"
      },
      {
        "command": "vschat.setProviderApiKey",
        "title": "设置 LLM Provider API Key",
        "category": "VSChat"
      },
      {
        "command": "vschat.deleteProviderApiKey",
        "title": "删除 LLM Provider API Key",
        "category": "VSChat"
      },
      {
        "command": "vschat.copyBlockContent",
        "title": "复制块内容",
        "category": "VSChat"
      }
    ],
    "keybindings": [
      {
        "command": "vschat.toggleCurrentBlockState",
        "key": "ctrl+alt+t",
        "mac": "cmd+alt+t",
        "when": "editorTextFocus && editorLangId == chat"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "vschat.sendCurrentContextRequest",
          "group": "navigation",
          "when": "editorLangId == chat"
        }
      ]
    },
    "configuration": {
      "title": "VSChat",
      "properties": {
        "vschat.api.profiles": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "profileName": {
                "type": "string",
                "description": "API 配置名称"
              },
              "endpoint": {
                "type": "string",
                "description": "API 端点"
              },
              "model": {
                "type": "string",
                "description": "模型名称"
              },
              "apiKeySecret": {
                "type": "string",
                "description": "API 密钥名称"
              }
            },
            "required": ["profileName", "endpoint", "model", "apiKeySecret"]
          },
          "description": "API 配置列表"
        },
        "vschat.api.activeProfileName": {
          "type": "string",
          "description": "当前激活的 API 配置名称"
        },
        "vschat.llm.providers": {
          "type": "array",
          "default": [
            {
              "id": "openai",
              "name": "OpenAI",
              "url": "https://api.openai.com/v1/chat/completions",
              "models": [
                {
                  "id": "gpt-3.5-turbo",
                  "name": "gpt-3.5-turbo",
                  "providerId": "openai",
                  "alias": "GPT-3.5"
                },
                {
                  "id": "gpt-4",
                  "name": "gpt-4",
                  "providerId": "openai",
                  "alias": "GPT-4"
                }
              ]
            },
            {
              "id": "deepseek",
              "name": "DeepSeek",
              "url": "https://api.deepseek.com/v1/chat/completions",
              "models": [
                {
                  "id": "deepseek-chat",
                  "name": "deepseek-chat",
                  "providerId": "deepseek",
                  "alias": "DeepSeek Chat"
                }
              ]
            }
          ],
          "description": "LLM providers configuration"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
